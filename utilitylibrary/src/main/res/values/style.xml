    <style name="textBlackNormal.bold" parent="textBlackTitle">
         <item name="android:textStyle">bold</item>

    </style>
    <!--  <item name="fontString">ubuntu_bold</item>-->
    <style name="textBlackTitle.bold" parent="textBlackTitle">

        <item name="android:textStyle">bold</item>
    </style>

    <style name="textWhiteTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>
    <style name="textWhiteNormal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="textGreyNormal">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="textCCRBBrownNormal">
        <item name="android:textColor">@color/ccrbBrown2</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="textWhiteDesc">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <style name="textWhiteTitle.bold" parent="textWhiteTitle">

        <item name="android:textStyle">bold</item>
    </style>
    <style name="textWhiteNormal.bold" parent="textWhiteNormal">

        <item name="android:textStyle">bold</item>
    </style>
